<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="stlabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#054B6A</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="st_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">#B8B6B6</item>
        <item name="android:gravity">center|center_horizontal</item>

    </style>

    <style name="st_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#8C133C</item>
        <item name="android:textSize">36dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="st_button_vert">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:backgroundTint">#B3ABAB</item>
    </style>

    <style name="st_aff_contact">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="st_titleNew">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">116dp</item>
        <item name="android:textColor">#D6D1D1</item>
        <item name="android:textSize">36dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="st_input">
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_person_pin_24</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColorHint">#E3DDDD</item>
    </style>

    <style name="st_rouded_button">
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:backgroundTint">#FBF8F8</item>
    </style>
</resources>