<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Accueil">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="Bienvenue!"
        android:textFontWeight="300"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/title_acc"
        app:layout_constraintStart_toStartOf="@+id/title_acc"
        app:layout_constraintTop_toBottomOf="@+id/title_acc" />

    <TextView
        android:id="@+id/title_acc"
        style="@style/st_titleNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="80dp"
        android:text="Accueil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ajout"
        style="@style/st_rouded_button"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="Ajouter"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_aff"
        style="@style/st_rouded_button"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="Afficher"
        app:layout_constraintEnd_toEndOf="@+id/btn_ajout"
        app:layout_constraintStart_toStartOf="@+id/btn_ajout"
        app:layout_constraintTop_toBottomOf="@+id/btn_ajout" />

    <Button
        android:id="@+id/btn_notif_activity"
        style="@style/st_rouded_button"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="Notifications"
        app:layout_constraintEnd_toEndOf="@+id/btn_aff"
        app:layout_constraintStart_toStartOf="@+id/btn_aff"
        app:layout_constraintTop_toBottomOf="@+id/btn_aff" />
</androidx.constraintlayout.widget.ConstraintLayout>